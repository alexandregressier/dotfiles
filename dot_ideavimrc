let mapleader = " "

source ~/.vimplug

""" Plugin Settings -----------------------------
let g:argtextobj_pairs="(:),{:},[:],<:>"

let g:highlightedyank_highlight_duration = "200"

""" Settings -----------------------------
set showmode
set relativenumber
set number
set scrolloff=8
set clipboard+=unnamed
set ttimeout

set nomagic
set incsearch
set hlsearch
set ignorecase
set smartcase

set ideastatusicon="gray"

function! SmartHome()
    " Check if the cursor is at the beginning of the line
    if col('.') == 1
        " If the cursor is at the beginning of the line, execute {
        normal! {
    else
        " If the cursor is not at the beginning of the line, go to the beginning of the line
        normal! ^
    endif
endfunction


""" Mappings ------------------------------------
nnoremap q <Action>(ReformatCode)
nnoremap w o
nnoremap W O
nnoremap e db

nnoremap t v
nnoremap T V
nnoremap y u
nnoremap Y <C-r>
nnoremap u b
noremap i k
nnoremap o e
nnoremap p t

nnoremap a v
nnoremap A V
nnoremap s c
nnoremap S C
nnoremap D x
nnoremap f i
nnoremap F I
nnoremap g .
nnoremap h :call SmartHome()<cr>^
nnoremap H I
noremap j h
noremap k j
noremap ; $
nnoremap : A

nnoremap z u
nnoremap Z <C-r>
nnoremap x c$
xnoremap x d
noremap c y
noremap C Y
nnoremap v p
nnoremap b s
nnoremap m m
nnoremap , <C-w><C-w>
nnoremap . %
xnoremap / y/<C-r>0
xnoremap ? y/<C-r>0


map <Leader><Leader> <Action>(GotoAction)

" Quit
nmap <Leader>qq <Action>(Exit)
nmap <Leader>qr <Action>(InvalidateCaches)

